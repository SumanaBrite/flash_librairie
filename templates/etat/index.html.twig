{% extends 'base.html.twig' %}

{% block title %}Etats{% endblock %}

{% block body %}
    <h1>Liste de états</h1>
    <br></br>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Libelle</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for etat in etats %}
            <tr>
                <td>{{ etat.id }}</td>
                <td>{{ etat.libelle }}</td>
                <td>
                    <a href="{{ path('etat_show', {'id': etat.id}) }}">👀Voir</a>
                    /
                    <a href="{{ path('etat_edit', {'id': etat.id}) }}">📝Editer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('etat_new') }}" class="btn btn-secondary btn-lg">Creation d'un nouvel état</a>
{% endblock %}
