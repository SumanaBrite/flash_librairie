{% extends 'base.html.twig' %}

{% block title %}Liste des Articles{% endblock %}

{% block body %}
    <h1>Article index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Description</th>
                <th>DateParution</th>
                <th>Isbn</th>
                <th>Image</th>
                <th>Prix</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.titre }}</td>
                <td>{{ article.description }}</td>
                <td>{{ article.dateParution ? article.dateParution|date('Y-m-d') : '' }}</td>
                <td>{{ article.isbn }}</td>
                <td>
                    <img src="/images/uploads/{{ article.path }}" alt="{{ article.image }}"></td> 
                    
                <td>{{ article.prix }}</td>
                <td>
                    <a href="{{ path('article_show', {'id': article.id}) }}">Afficher</a>
                    <a href="{{ path('article_edit', {'id': article.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('article_new') }}">Create new</a>
{% endblock %}
