{% extends 'base.html.twig' %}

{% block title %}Articles{% endblock %}

{% block body %}

<h1>Liste des articles</h1>
    

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Date de parution</th>
                <th>Isbn</th>
                <th>Image</th>
                <th>Prix</th>
                <th>Editeur</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.titre }}</td>
                <td>{{ article.description }}</td>
                <td>{{ article.dateParution ? article.dateParution|date('Y-m-d') : '' }}</td>
                <td>{{ article.isbn }}</td>
                <td>
                    <img src="/images/uploads/{{ article.path }}" class="img-small" alt="{{ article.image }}"></td> 
                    
                <td>{{ article.prix }}</td>
                <td>{{ article.editeur }}</td>
                <td>
                    <a href="{{ path('article_show', {'id': article.id}) }}">üëÄVoir</a>
                    /
                    <a href="{{ path('article_edit', {'id': article.id}) }}">üìùEditer</a>
                </td>

            </tr>
        {% else %}
            <tr>
                <td colspan="8">Aucun enregistrement trouv√©</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <br></br>

