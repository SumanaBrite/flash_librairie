
<div id="tab1">

{# <h4>  Panorama des livres </h4> #}

 {% for categorie in categories %}
    
    {%  set nbr = 0 %}
    {%  set flg = 0 %}
    {# <div class="row align-items-start mt-5"> #}
    {# <div class="col col-1"></div> #}
    {% for article in articles %}
      

        {% if article.categorie.id == categorie.id %}
            {% if nbr == 0 %}
             {%  set flg = 1 %}
               <hr>
               <h4 class=""> {{ categorie.libelle }}</h4>
               <hr>
                <div class="row align-items-start mt-5">
            {% endif  %}
            {% if nbr < 5 %}
                <div class="col col-2">
                    <div class="card mb-3" style="max-width: 540px;">
                        <div class="row g-0">
                        
                            <img src="/images/uploads/{{ article.path }}" class="d-block w-100" alt="{{ article.image }}">
                        
                                <div class="card-body"> <h5 class="card-title">{{ article.titre }}</h5>
                                    <p class="card-text">{{ article.description }}</p>
                                
                                </div>
                        
                        </div>
                    </div>
                </div>  
                 {%  set nbr = nbr + 1 %}
            {% endif %}
            
        {% endif %}
    {% endfor %}
 
    {% if flg == 1 %}
          </div>

    {% endif  %}
    

{% endfor %}
</div>
