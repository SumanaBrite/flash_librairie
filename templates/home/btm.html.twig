{%  set nbr = 0 %}


{# <div class="col col-1"></div> #}
 {% for article in articles %}   

    {% if nbr < 5 %}
        
                <div class="col col-2">
                    <div class="card mt-3" style="max-width: 540px;">
                       
                           
                        <div class="card-body"> 
                            <h5 class="card-title">{{ article.titre }} title</h5>
                            
                            <img src="/images/uploads/{{ article.path }}" class="d-block w-100" alt="{{ article.image }}">
                        </div>
                           
                       
                    </div>
                </div>
        </div>
    {% endif %} 
    {%  set nbr = nbr + 1 %}
{% endfor %}


