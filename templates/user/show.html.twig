{% extends 'base.html.twig' %}

{% block title %}Utilisateurs{% endblock %}

{% block body %}
    <h1>Fiche utilisateur</h1>
    <br></br>
<div class="jumbotron">
    <table class="table table table-bordered table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Rôle</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ user.nom }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ user.prenom }}</td>
            </tr>
            <tr>
                <th>Téléphone</th>
                <td>{{ user.telephone }}</td>
            </tr>
            
        </tbody>
    </table>

    </div>

    <br></br>

    <a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-secondary btn-lg">Editer</a>

    <br></br>

    <a href="{{ path('user') }}" class="btn btn-secondary btn-lg">Retour à la liste</a>

    <br></br>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
