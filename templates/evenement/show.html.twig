{% extends 'base.html.twig' %}

{% block title %}Evènements{% endblock %}

{% block body %}
    <h1>Evènement</h1>
    <br></br>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ evenement.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ evenement.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ evenement.description }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ evenement.ville }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ evenement.date ? evenement.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ evenement.image }}</td>
            </tr>
            <tr>
                <th>Path</th>
                <td>{{ evenement.path }}</td>
            </tr>
        </tbody>
    </table>

    <br></br>

    <a href="{{ path('evenement_edit', {'id': evenement.id}) }}" class="btn btn-secondary btn-lg">Editer</a>

    <br></br>

    <a href="{{ path('evenement_index') }}" class="btn btn-secondary btn-lg">Retour à la liste</a>

    <br></br>

    

    {{ include('evenement/_delete_form.html.twig') }}
{% endblock %}
