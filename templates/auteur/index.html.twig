{% extends 'base.html.twig' %}

{% block title %}Auteur index{% endblock %}

{% block body %}
    <h1>Auteur index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Description</th>
                <th>Texte Image</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for auteur in auteurs %}
            <tr>
                <td>{{ auteur.id }}</td>
                <td>{{ auteur.nom }}</td>
                <td>{{ auteur.prenom }}</td>
                <td>{{ auteur.description }}</td>
                <td>{{ auteur.image }}</td>
                <td><img src="/images/uploads/{{ auteur.path }}" alt="{{ auteur.image }}"></td>
                <td>
                    <a href="{{ path('auteur_show', {'id': auteur.id}) }}">Afficher</a>
                    <a href="{{ path('auteur_edit', {'id': auteur.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('auteur_new') }}">Create new</a>
{% endblock %}
