{% extends 'base.html.twig' %}

{% block title %}Auteurs{% endblock %}

{% block body %}
    <h1>Liste des auteurs</h1>
    <br></br>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Description</th>
                <th>Texte Image</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for auteur in auteurs %}
            <tr>
                <td>{{ auteur.id }}</td>
                <td>{{ auteur.nom }}</td>
                <td>{{ auteur.prenom }}</td>
                <td>{{ auteur.description }}</td>
                <td>{{ auteur.image }}</td>
                <td><img src="/images/uploads/{{ auteur.path }}" class="img-small" alt="{{ auteur.image }}"></td>
                <td>
                    <a href="{{ path('auteur_show', {'id': auteur.id}) }}">👀Voir</a>
                    /
                    <a href="{{ path('auteur_edit', {'id': auteur.id}) }}">📝Editer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <br></br>

    <a href="{{ path('auteur_new') }}" class="btn btn-secondary btn-lg">Ajouter un nouvel auteur</a>
{% endblock %}
